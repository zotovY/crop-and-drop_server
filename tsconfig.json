{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ] ,
    "types": [
      "node",
      "jest"    ] ,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["*.ts", "*.d.ts", "server.ts", "jest-preload.js", "declaration/mongoose-extended-schema.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
  "typeAcquisition": {
    "include": ["jest"]
  }
}